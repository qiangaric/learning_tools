    "version": "0.2.0",
    "configurations": [
        {
            "name": "build debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/pg_tail", //可执行文件的位置！
            "args": [
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            // "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}